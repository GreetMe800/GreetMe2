@if (Model.birthdayViewModels.Any())
{
    foreach (var item in Model.birthdayViewModels)
    {
        <p> Tillykke til @item.FullName, med de @DateTime.Now.Date.Subtract(item.DateOfBirth); år!</p>
    }
}

@if (Model.anniversaryViewModels.Any())
{
    foreach (var item in Model.anniversaryViewModels)
    {
        <p> Tillykke til @item.FullName, med de @DateTime.Now.Date.Subtract(item.HiringDate) års jubileaum. </p>
    }
}

